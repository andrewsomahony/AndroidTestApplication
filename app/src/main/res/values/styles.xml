<resources>
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorMenuBarText</item>
        <item name="android:textColorSecondary">@color/colorMenuBarText</item>
        <item name="android:background">@color/colorMenuBar</item>
    </style>

    <style name="GeneralTextTheme" parent="Theme.AppCompat">
        <item name="android:textColor">@color/generalTextColor</item>
    </style>

</resources>
